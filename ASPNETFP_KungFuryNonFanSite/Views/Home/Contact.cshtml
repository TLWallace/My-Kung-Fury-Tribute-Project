@model ASPNETFP_KungFuryNonFanSite.Models.ContactFormModel
@{
    ViewBag.Title = "Contact Non-Fan";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>We always want to know how we're doing and what you'd like to see us do next. Tell us who you are, how to contact you and what you're thinking. Together, we'll make the interweb an even better, even geekier place for everyone :)</p>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
        <div class="col-md-offset-2 col-md-12">
            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-offset-2 col-md-12">
            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromEmail)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
        <div class="col-md-offset-2 col-md-12">
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Send &raquo;" />
        </div>
    </div>
    <div>
        <br />
        <br />
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
